<?xml version="1.0"?>

<!--
  This manifest describes that channels that exist in the LMS. It
  is a convention that the handle of a non producer channel MUST be the same
  as the class name that corresponds to the class given in <className>.
  And the handle of a producer channel MUST be the same as the producer
  class name.
  For example, if the className =
  net.unicon.portal.channels.navigation.NavigationChannel, the handle must
  be NavigationChannel   or
  producer = net.unicon.academus.apps.navigation.NavigationProducer, the
  handle must be NavigationProducer.  The handles must be unique and this
  convention doesn't guarentee this. Care must be taken that there are no
  duplicate handles.
-->
<manifest>
    <global>
        <channel order="1" mode="Global" handle="NavigationChannel">
        <producer />
            <className>net.unicon.portal.channels.navigation.NavigationChannel</className>
            <cscrEnabled>false</cscrEnabled>
            <sslLocation>NavigationChannel.ssl</sslLocation>
            <timeout>60000</timeout>
            <type>Admin</type>
            <label>Navigation</label>			
            <description></description>
            <permissions>
                <activity handle="viewInactiveOfferings">
                    <label>View Inactive Offerings</label>
                    <description>User may view the inactive offerings.</description>
                    <setting role="Administrator" value="True"/>
                </activity>
            </permissions>
        </channel>
    </global>
