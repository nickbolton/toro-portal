<!--
    Configuration file for blog instance: default

    See gateway-portlet.xml for details on sso-entry elements.
-->
<gateway peephole="gateway_main">

    <title>Blog: Default</title>

    <sso-entry handle="blog-default" class="largeBlog">
        <label>Blog: Default</label>
        <description>View your Blojsom Webblog</description>
        <target handle="login">
            <url>@portal.server.http.protocol@://@portal.server.hostname@@portal.server.port@/toro-blojsom/blog/default/</url>
            <method>GET</method>
        </target>
        <sequence type="login"><target handle="login"/></sequence>
        <window type="iframe">
            <title>Blojsom</title>
            <name>Blojsom</name>
            <style>width:100%;height:600px;border:0px;</style>
        </window>
    </sso-entry>

    <sso-entry handle="blog-default-admin" class="largeBlogAdmin">
        <label>Blog: Default [ADMIN]</label>
        <description>Administer/View your Blojsom Webblog</description>
        <target handle="login">
            <url>@portal.server.http.protocol@://@portal.server.hostname@@portal.server.port@/toro-blojsom/blog/default/?flavor=admin</url>
            <method>POST</method>
            <parameter name="username"><value>{user.login.id}</value></parameter>
            <parameter name="password"><value>{password}</value></parameter>
        </target>
        <sequence type="login"><target handle="login"/></sequence>
        <window type="iframe">
            <title>Blojsom</title>
            <name>Blojsom</name>
            <style>width:100%;height:600px;border:0px;</style>
        </window>
    </sso-entry>

    <access-broker handle="blog-default" impl="net.unicon.alchemist.access.permissions.PermissionsAccessBroker">
        <access impl="net.unicon.academus.apps.blogger.BlojsomAccessType"/>
        <permissions>
            <access-broker handle="blog-default-p" impl="net.unicon.alchemist.access.rdbms.RdbmsAccessBroker" needsDataSource="true">
                <access impl="net.unicon.academus.apps.blogger.BlojsomAccessType"/>
            </access-broker>
        </permissions>
    </access-broker>

    <!-- Nothing below this line should require modification in normal usage. -->

    <!-- JNDI reference to access the database. -->
    <jndi-ref>java:comp/env/jdbc/@datasource@</jndi-ref>

</gateway>
