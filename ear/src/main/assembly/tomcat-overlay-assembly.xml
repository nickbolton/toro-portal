<?xml version="1.0" encoding="utf-8"?>
<assembly>
    <id>tomcat-overlay</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!--
         | Include the main artifact (extracted)
         | TODO - replaces uPortal with valid maven variable
         +-->
        <fileSet>
            <directory>target/toro</directory>
            <outputDirectory>webapps</outputDirectory>
            <includes>
                <include>**/*.war</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/toro</directory>
            <outputDirectory>webapps/uPortal/WEB-INF/lib</outputDirectory>
            <includes>
                <include>uportal-academus-api*.jar</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>target/toro</directory>
            <outputDirectory>shared/lib</outputDirectory>
            <includes>
                <include>*.jar</include>
            </includes>
            <excludes>
                <exclude>uportal-academus-api*.jar</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>
