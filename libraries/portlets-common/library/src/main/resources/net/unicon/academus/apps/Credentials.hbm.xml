<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-lazy="false">

    <class name="net.unicon.academus.apps.Credentials" table="SSO_CREDENTIALS">
        <id name="id" type="int" column="CREDENT_ID"/>
        <property name="userKey" type="string" column="USER_KEY"/>
        <property name="system" type="string" column="SYSTEM"/>
        <property name="username" type="string" column="USERNAME"/>
        <property name="password" type="string" column="PASSWORD"/>
    </class>

</hibernate-mapping>
