<channel-definition>
    <title>Toro LDAP Change Password Channel</title>
    <name>Toro LDAP Change Password Channel</name>
    <fname>toro-ldapchangepw-channel</fname>
    <desc>Toro LDAP Change Password Channel</desc>
    <type>Custom</type>
    <class>net.unicon.portal.channels.ldapchangepw.CLdapChangePW</class>
    <timeout>60000</timeout>

    <hasedit>N</hasedit>
    <hashelp>N</hashelp>
    <hasabout>N</hasabout>

    <secure>N</secure>
    <locale>en_US</locale>

    <categories>
        <category>Applications</category>
    </categories>

    <groups>
        <group>Everyone</group>
    </groups>

    <parameters>
        <parameter>
            <name>cscrEnabled</name>
            <value>true</value>
            <description>Enables Client-Side Channel Rendering</description>
            <ovrd>N</ovrd>
        </parameter>
    </parameters>
</channel-definition>
