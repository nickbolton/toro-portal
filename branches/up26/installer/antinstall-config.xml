        <comment displayText="    Deploy uPortal"/>
        <comment displayText="    All Portlets"/>
        <comment displayText="    All Channels"/>
		<checkbox
            property="deploy.all"
            displayText="Deploy All"
            defaultValue="@deploy.all@"
