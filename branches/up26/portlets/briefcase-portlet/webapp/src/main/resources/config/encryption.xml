<encryption-services>

    <!--
       The <encryption-service> element defines an instance of the encryption
       service with a given <name> and <key>. The encryption can be made into
       a no-op by setting the attribute 'encrypt' to "false".
      -->
    <encryption-instance encrypt="true">
        <!--
            The name of the encryption instance. This is defined by the
            application utilizing the service.
           -->
        <name>monkey</name>

        <!--
            <key> must contain an 8 character string that will act as the key
            for the encryption. A longer string can be given, but only the
            first 8 characters will be used.
           -->
        <key>cafebabe</key>
    </encryption-instance>

</encryption-services>
