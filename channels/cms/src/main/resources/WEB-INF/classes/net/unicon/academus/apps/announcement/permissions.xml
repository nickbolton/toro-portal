<!--  Note the handle of the application must correspond to the same
      handle as in the Channels.xml manifest.
-->
<application handle="AnnouncementProducer">
  <label>Announcements</label>
  <permissions>
    <activity handle="insert">
        <label>Add Announcements</label>
        <description>User may add an announcement.</description>
        <setting role="Sponsor" value="True"/>
        <setting role="Assistant" value="True"/>

        <!-- these are for non-lms channels -->
        <setting role="Role:Sponsor" value="True"/>
        <setting role="Role:Assistant" value="True"/>

        <dirty-event name="Announcements.add" flag="yes" scope="OfferingChannel" targets="AnnouncementProducer" />
    </activity>
    <activity handle="submit">
        <label>Edit Announcement</label>
        <description>User may edit an announcement.</description>
        <setting role="Sponsor" value="True"/>
        <setting role="Assistant" value="True"/>

        <!-- these are for non-lms channels -->
        <setting role="Role:Sponsor" value="True"/>
        <setting role="Role:Assistant" value="True"/>

        <dirty-event name="Announcements.edit" flag="yes" scope="OfferingChannel" targets="AnnouncementProducer" />
    </activity>
    <activity handle="delete">
        <label>Delete Announcement</label>
        <description>User may delete an announcement.</description>
        <setting role="Sponsor" value="True"/>
        <setting role="Assistant" value="True"/>

        <!-- these are for non-lms channels -->
        <setting role="Role:Sponsor" value="True"/>
        <setting role="Role:Assistant" value="True"/>

        <dirty-event name="Announcements.delete" flag="yes" scope="OfferingChannel" targets="AnnouncementProducer" />
    </activity>
  </permissions>
</application>

